@import url(http://fonts.googleapis.com/css?family=News+Cycle);
@import url(http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css);
@import "bootstrap/bootstrap";
@import "boxes.css.less";

body
{
  background-color: #e8e8e8;
}

.comment-area
{
  margin: 50px 0;
  background: lighten(@gray-lighter, 5%);
  border-top: 2px solid @gray-lighter;
  padding: 10px;
}

.posted-by
{
  font-size: 1rem;
  background: lighten(@gray-lighter, 5%);
  color: @gray;
  padding: 5px;
}

.btn
{
  display: inline-block;
  margin-bottom: 5px;
}

footer.main
{
  margin: 50px auto;
}

.logo
{
  max-width: 100%;
  max-height: 100%;
  margin-top: -6px;
}

img
{
  max-width: 100%;
}

.addthis_toolbox
{
  margin-bottom: 20px;
}

.label.label-default
{
  a
  {
    color: #fff;
  }
}

.navbar-default
{
  border: none;
}

.header-bar
{
  background: @brand-info;
  padding: 20px;

  a
  {
    color: #fff;

    &:hover
    {
      text-decoration: none;
    }
  }
}

li.inline
{
  display: inline-block;
  margin: 5px;
  padding: 5px;
}

li.source-label
{
  a
  {
    color: #fff;
  }
}
